@model WorktimeRegister.Models.UserProfile

@{
    ViewBag.Title = "Manage User Information";
}

<h2>Manage User Information</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>UserProfile</legend>

        @Html.HiddenFor(model => model.UserId)

        <div class="editor-label">
            @Html.LabelFor(model => model.UserName)
        </div>
        <div class="editor-field">
            <!--Make it read-only, so the user cannot edit-->
            @Html.TextBoxFor(model => model.UserName, new { @readonly = true , @class = "readonly"})
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.DateOfBirth)
        </div>
        <div class="editor-field">
            <!--Make it read-only, so the user cannot edit-->
            @Html.TextBoxFor(model => model.DateOfBirth, "{0:yyyy.MM.dd}", new { @readonly = true, @class = "readonly" })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.PlaceOfBirth)
        </div>
        <div class="editor-field">
            <!--Make it read-only, so the user cannot edit-->
            @Html.TextBoxFor(model => model.PlaceOfBirth, new { @readonly = true, @class = "readonly" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FirstName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LastName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PhoneNumber)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PhoneNumber)
            @Html.ValidationMessageFor(model => model.PhoneNumber)
        </div>
        
            @*Through THIS LINK everyone can change their own password only.
            Through THIS LINK the admin can modify his/her own password only.*@
            @if (User.Identity.Name == Model.UserName )
            {
                <p>
                    @Html.ActionLink("Change Password", "Manage", new { @class = "submitButton" })
                </p>
            }
        
        <p>
            <input class="submitButton" type="submit" value="Save" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
