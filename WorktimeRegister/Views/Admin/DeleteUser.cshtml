@model WorktimeRegister.Models.UserProfile

@{
    ViewBag.Title = "Delete user";
}

<h3>Are you sure you want to delete this?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Delete user</legend>

        @Html.HiddenFor(model=>model.UserId)
        @Html.HiddenFor(model=>model.Worktimes)

        <div >
            @Html.LabelFor(model => model.UserName )
        </div>
        <div >
            @Html.TextBoxFor(model => model.UserName, new { @readonly = true, @class = "readonly" })
        </div>
        <div >
            @Html.LabelFor(model => model.LastName)
        </div>
        <div >
            @Html.TextBoxFor(model => model.LastName, new { @readonly = true, @class = "readonly" })
        </div>
        <div >
            @Html.LabelFor(model => model.FirstName)
        </div>
        <div >
            @Html.TextBoxFor(model => model.FirstName, new { @readonly = true, @class = "readonly" })
        </div>
        <div >
            @Html.LabelFor(model => model.PhoneNumber )
        </div>
        <div >
            @Html.TextBoxFor(model => model.PhoneNumber, new { @readonly = true, @class = "readonly" })
        </div>
        <div >
            @Html.LabelFor(model => model.Email)
        </div>
        <div >
            @Html.TextBoxFor(model => model.Email, new { @readonly = true, @class = "readonly" })
        </div>
        <div>
            @Html.LabelFor(model => model.DateOfBirth )
        </div>
        <div>
            @Html.TextBoxFor(model => model.DateOfBirth, "{0:yyyy.MM.dd}" , new { @readonly = true, @class = "readonly" })
        </div>
        <div>
            @Html.LabelFor(model => model.PlaceOfBirth )
        </div>
        <div>
            @Html.TextBoxFor(model => model.PlaceOfBirth , new { @readonly = true, @class = "readonly" })
        </div>
        <p>
            <input class ="submitButton" type="submit" value="Delete" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Users", "Users")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}