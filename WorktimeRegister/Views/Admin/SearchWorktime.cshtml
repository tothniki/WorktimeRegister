@model IEnumerable<WorktimeRegister.Models.Worktimes>

@{
    ViewBag.Title = "SearchWorktime";
}

<h2>Search Worktimes</h2>


@Html.Partial("_SearchByDate")

@if (Request["userId"] != null)
{
    @Html.ActionLink("Add wokrtime", "CreateUserWorktime", new { userId = Request["userId"]})
}

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserProfile.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Arrival)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Leaving)
        </th>
        <th>
           Etc.
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserProfile.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arrival)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leaving)
            </td>

            <td>
                @Html.ActionLink("Edit", "EditUserWorktime", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteUserWorktime", new { id = item.Id })
            </td>
        </tr>
    }

</table>