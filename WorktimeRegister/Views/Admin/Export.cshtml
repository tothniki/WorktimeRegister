@model DateTime

@{
    ViewBag.Title = "Export";
}

<h2>Export Excel files</h2>

@using (@Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    @Html.DropDownList("DropDownYear", Enumerable.Range(Model.Year, DateTime.Now.Year - Model.Year + 1).Select(x => new SelectListItem { Text = x.ToString() }), new { @class = "dropDownList" })
    @Html.DropDownList("DropDownMonth", Enumerable.Range(1, 12).Select(x => new SelectListItem { Text = x.ToString() }), new { @class = "dropDownList" })

    <input class="submitButton" type="submit" value="Export" />
}