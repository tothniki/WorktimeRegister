<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title </title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @*I set here this scc because of the datepicker*@
        @Styles.Render("~/Content/themes/base/css")
    </head>
    <body class="admin">
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p id="admin-site-title">@Html.ActionLink("Cake Shop Garden", "Index", "Home")</p>
                    <h1 id="admin-title">Admin</h1>
                </div>
                <div class="float-right">
                    <section class="admin"id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav class="admin" id="menu">
                        <ul>
                            <li>@Html.ActionLink("Today", "Index", "Admin")</li>
                            <li>@Html.ActionLink("Users", "Users", "Admin")</li>
                            <li>@Html.ActionLink("Worktimes", "SearchWorktime", "Admin")</li>
                            <li>@Html.ActionLink("Company", "Company", "Home")</li>
                            <li>@Html.ActionLink("Export", "Export", "Admin")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
